<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.betasoft.saas.demo.dao.UserDao">
    <select id="selectAllUser" resultType="cn.com.betasoft.saas.demo.model.UserModel">
        select * from users
    </select>

    <select id="selectUserById" parameterType="String" resultType="cn.com.betasoft.saas.demo.model.UserModel">
        select * from users where id=#{id}
    </select>

    <!--通过<resultMap>映射实体类属性名和表的字段名对应关系 -->
    <resultMap type="cn.com.betasoft.saas.demo.model.UserModel" id="userResultMap">
        <!-- 用id属性来映射主键字段 -->
        <id property="id" column="id"/>
        <!-- 用result属性来映射非主键字段 -->
        <result property="userName" column="userName"/>
        <result property="userPassword" column="userPassword"/>
        <result property="mobilephone" column="mobilephone"/>
    </resultMap>
</mapper>