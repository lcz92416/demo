<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.betasoft.saas.demo.mapper.SysUserMapper">
    <select id="findByUserName" parameterType="String" resultMap="userMap">
        select u.*,r.name
        from Sys_User u
        LEFT JOIN sys_role_user sru on u.id= sru.Sys_User_id
        LEFT JOIN Sys_Role r on sru.Sys_Role_id=r.id
        where username= #{username}
    </select>
    <resultMap id="userMap" type="cn.com.betasoft.saas.demo.model.SysUserModel">
        <id property="id" column="ID"/>
        <result property="username" column="username"/>
        <result property="password" column="PASSWORD"/>
        <collection property="roles" ofType="cn.com.betasoft.saas.demo.model.SysRoleModel">
            <result column="name" property="name"/>
        </collection>
    </resultMap>
</mapper>